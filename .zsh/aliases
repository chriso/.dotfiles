# Platform-specific additions
platform=`uname`
if [[ $platform == "Darwin" ]]; then
    alias ls="ls -G"
    alias hidefile="SetFile -a V $1"
elif [[ $platform == "Linux" ]]; then
    alias ls="ls --color=auto"
fi

# Lazy
alias ll='ls -lh'
alias gs='git status --short --branch'

# Fix encoding issues
alias sed='LC_ALL=C sed'
alias grep='LC_ALL=C grep'

# Prefer github.com/ggreer/the_silver_searcher over ack
if command -v ag >/dev/null; then
    alias ack='ag'
fi

# Use the ca-bundle from homebrew if it's available
if [ -f /usr/local/opt/curl-ca-bundle/share/ca-bundle.crt ]; then
    export SSL_CERT_FILE=/usr/local/opt/curl-ca-bundle/share/ca-bundle.crt
fi

# Prefer gzcat over osx's weird zcat
if command -v gzcat >/dev/null; then
    alias zcat='gzcat'
fi

# Set the title
function title() {
    echo -n -e "\033]0;$1\007"
}

